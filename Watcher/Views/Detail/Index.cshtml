@model Watcher.Models.Search.TorrentDetailModel

@{
    ViewData["Title"] = "Torrent Detail";
}


<div id="assets">
    <h3 class="detail_title" align="center">@Model.Name</h3>
    <div id="assetsTable">
        <table class="table table-condensed table-responsive">
            <tr>
                <th>Torrent:</th>
                <td>
                    <a href="@Model.MagnetLink" class="noborder">
                        @Model.Name
                    </a>
                    <a href="@Model.MagnetLink" class="noborder">
                        <i class="glyphicon glyphicon-magnet"></i>
                    </a>
                </td>
            </tr>

            <tr>
                <th>Magnet Link:</th>
                <td>@Model.MagnetLink</td>
            </tr>

            <tr>
                <th>Infohash:</th>
                <td>@Model.ID</td>
            </tr>
            <tr>
                <th>Type:</th>
                <td>@Model.Type</td>
            </tr>
            <tr>
                <th>Size:</th>
                <td>@Model.Size</td>
            </tr>
            <tr>
                <th class="accordion"><u>Show/Hide Files:</u></th>
                <td class="panel" id="infoCount">@Model.NrFiles</td>
                <!-- hidden-->
                <td class="panel" id="infoFiles">
                    <table class="table table-condensed table-responsive">
                        <thead>
                            <tr>
                                <th>File Name</th>
                                <th>Size</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                        if (Model != null)
                        {
                            foreach (var file in Model.Files)
                            {
                                <tr>
                                    <td class="">@file.Name</td>
                                    <td class="">@file.Size</td>
                                </tr>
                    }
                }
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <th>Added:</th>
                <td>@Model.Date</td>
            </tr>
            <tr>
                <th>Peers:</th>
                <td>@Model.PeerNumber</td>
            </tr>
            <tr>
                <th>Categories:</th>
                <td>@Model.Categories</td>
            </tr>
            <tr>
                <th class="accordion" id="accordion2"><u>Show/Hide IPs:</u></th>
                <!-- hidden-->
                <td class="panel" id="infoIPs">
                    <input type="text" class="form-control" id="searchIP" placeholder="Search IP...">
                    <table class="table table-condensed table-responsive">
                        <thead>
                            <tr>
                                <th>IP</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                            if (Model != null)
                            {
                                foreach (var ip in Model.IPs)
                                {
                                    <tr>
                                        <td class=""><a asp-area="" asp-controller="IP" asp-action="Index" asp-route-q="@ip">@ip</a></td>
                                    </tr>
                                }
                            }
                              }
                        </tbody>
                    </table>
                </td>
            </tr>
        </table>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/detail.js"></script>
}
